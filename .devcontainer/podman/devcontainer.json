{
  "name": "ansible-dev-container-podman",
  "image": "ghcr.io/codekaizen-github/ansible-dev-tools-image:latest",
  "workspaceFolder": "/workdir/ansible_collections/my_organization/my_collection",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workdir/ansible_collections/my_organization/my_collection,type=bind,consistency=cached",
  "containerUser": "podman",
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--cap-add=SYS_RESOURCE",
    "--device",
    "/dev/fuse",
    "--security-opt",
    "seccomp=unconfined",
    "--security-opt",
    "label=disable",
    "--security-opt",
    "apparmor=unconfined",
    "--userns=host",
    "--hostname=ansible-dev-container",
    "--volume",
    "ansible-dev-tools-container-storage:/var/lib/containers"
  ],
  "postAttachCommand": "pre-commit install;",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible"
      ]
    }
  }
}
